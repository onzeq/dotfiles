{
    // VS Code settings
    "editor.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "editor.rulers": [
        79
    ],
    "editor.renderLineHighlight": "all",
    "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#3c3b3b",
    "editor.lineHighlightBorder": "#342e2e",
    "editorRuler.foreground": "#ff4081",
  },
    "editor.wordWrap": "off",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "editor.lineNumbers": "on",

    // Latex
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.outDir": "./Output",

    // Vim specific settings & mappings
    "vim.leader": "<SPACE>",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.enableNeovim": true,
    "vim.neovimUseConfigFile": true,
    "vim.neovimConfigPath": "$HOME/.config/nvim/init.lua",
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,

    // Insert Mode Mappings
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<ESC>"]
        },
        {
            "before": ["ctrl+c"],
            "after": ["<ESC>"]
        }
    ],

    // Visual Mode Mappigs
    "vim.visualModeKeyBindings": [
        {
            "before": ["<leader>", "p"],
            "after": "[[\"_dP]]"
        },
    ],
    // Normal Mode Mappings
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>", "e"],
            "commands": [
            "workbench.files.action.focusFilesExplorer"
        ]
        },
        {
            "before": ["<leader>", "r"],
            "commands": ["workbench.action.reloadWindow"]
        },
    {
        "before": [";"],
        "commands": [
            "workbench.action.showCommands"
        ],
        "silent": true
    },
    {
        "before": ["<C-p>"],
        "commands": [
            "workbench.action.quickOpen"
        ],
        "silent": true
    },

    // navigate through editor panes with vim keys and leader
    {
        "before": ["<leader>", "h"],
        "commands": [
            "workbench.action.navigateLeft"
        ],
        "silent": true
    },
    {
        "before": ["<leader>", "l"],
        "commands": [
            "workbench.action.navigateRight"
        ],
        "silent": true
    },
    {
        "before": ["<leader>", "j"],
        "commands": [
                "workbench.action.navigateDown"
            ],
            "silent": true
    },
    {
        "before": ["<leader>", "k"],
        "commands": [
            "workbench.action.navigateUp"
        ],
        "silent": true
    },

    // create new editor panes with vim keys and leader
    {
        "before": ["<leader>", "H"],
        "commands": [
            "workbench.action.moveEditorToLeftGroup"
        ],
        "silent": true
    },
    {
        "before": ["<leader>", "L"],
        "commands": [
            "workbench.action.moveEditorToRightGroup"
        ],
        "silent": true
    },
    {
        "before": ["<leader>", "J"],
        "commands": [
            "workbench.action.moveEditorToBelowGroup"
        ],
        "silent": true
    },
    {
        "before": ["<leader>", "K"],
        "commands": [
            "workbench.action.moveEditorToAboveGroup"
        ],
        "silent": true
    }
    ], 

    // Normal mode mappings non recursive
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["<leader>", "d"],
          "after": ["d", "d"]
        },
        {
          "before": ["<leader>", "o"],
          "after": ["o", "<ESC>"]
        },
        {
          "before": ["<leader>", "O"],
          "after": ["O", "<ESC>"]
        },
        {
          "before": ["<C-n>"],
          "commands": [":nohl"]
        },
        {
          "before": ["K"],
          "commands": ["lineBreakInsert"],
          "silent": true
        }
            
    ],
    "terminal.integrated.allowMnemonics": true,
    "window.zoomLevel": 1,
    "hediet.vscode-drawio.resizeImages": null,
    "editor.multiCursorModifier": "ctrlCmd",
    "scm.inputFontFamily": "",
    "editor.fontFamily": "SauceCodeProNerdFont",
}